#!/bin/bash

# XXX osx native readlink doesn't support -f, gnu readlink does, but i don't want to require macports
# stolen from http://bugs.gentoo.org/125466
# this has the risk of an infinite loop
my_readlink_f() {
  currlink=$1
  currfile=$(readlink "$1")
  while [[ -n ${currfile} ]]; do
    currlink=${currfile}
    currfile=$(readlink "${currlink}")
  done
  echo ${currlink}
}

have_gnu_readlink() {
  readlink -f `which readlink` > /dev/null 2>&1
}

do_readlink_f() {
  if have_gnu_readlink; then
    readlink -f "$1"
  else
    my_readlink_f "$1"
  fi
}

if [ -x /opt/syzygryd/bin/logRoll.pl ] && [ -d /opt/syzygryd/log ]; then
  echo "Rolling switcher logs"
  /opt/syzygryd/bin/logRoll.pl switcher
fi

script=`do_readlink_f $0`
path_to_script=`dirname $script`
switcher_home="${path_to_script}/.."
#echo "Switcher home = $switcher_home"

pushd ${switcher_home} > /dev/null 2>&1
mkdir -p /opt/syzygryd/log
echo "Starting switcher"
java -cp build/switcher.jar com.syzygryd.Switcher /opt/syzygryd/etc/setlist.csv 2>&1 | tee -a /opt/syzygryd/log/switcher.log
popd > /dev/null 2>&1

