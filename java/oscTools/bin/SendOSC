#!/bin/bash

pwd=`pwd`
path_to_script=`dirname $0`
# XX osx native readlink doesn't support -f, gnu readlink does, but i don't want to require macports
#oscTools_home=`readlink -f ${pwd}/${path_to_script}/..`
oscTools_home="${pwd}/${path_to_script}/.."
#echo "OscTools home = $oscTools_home"

pushd ${oscTools_home} > /dev/null 2>&1
java -cp build:../../processing/libraries/oscP5/library/oscP5.jar SendOSC "$@"
popd > /dev/null 2>&1

